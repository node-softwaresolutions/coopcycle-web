{% extends layout %}

{% block subnav %}
  <nav class="navbar">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#restaurant-navbar" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <span class="navbar-brand">
          {% if category.id is not empty %}
            <a href="{{ path(category_route, { id: category.id }) }}">{{ category.name }}</a>
          {% else %}
            {% trans %}restaurant.category.form.createRestaurantCategory{% endtrans %}
          {% endif %}
        </span>
      </div>
    </div>
  </nav>
{% endblock %}
